<div class="row">
  <div class="col-md-12 text-right">
    <a href="/admin/categories/new" class="btn btn-primary btn-xs" role="button">New</a>
  </div>
</div>
<br>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <thead class="thead-default">
        <tr>
          <th style="width: 5%">ID</th>
          <th style="width: 25%">Name</th>
          <th style="width: 40%">Description</th>
          <th style="width: 30%">Actions</th>
        </tr>
        </thead>
        <tbody>
          <% categories.forEach(c => { %>
            <tr>
              <td scope="row"><%= c.id %></td>
              <td><%= c.name %></td>
              <td><%= c.description %></td>
              <td>
                <a href="/admin/categories/<%= c.id %>" role="button" class="btn btn-light btn-xs">Show</a>
                <a href="/admin/categories/<%= c.id %>/edit" role="button" class="btn btn-success btn-xs">Edit</a>
                <form
                  action="/admin/categories/<%= c.id %>?_method=DELETE"
                  method="post"
                  style="display: inline-block;"
                >
                  <button type="submit" class="btn btn-danger btn-xs">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
    </table>
  </div>
</div>
